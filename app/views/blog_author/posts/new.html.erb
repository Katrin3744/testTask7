<%= form_with model: [:blog_author, @post], local: true do |form| %>
  <%= render 'shared/errors', resource: @post %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, id: :post_title%><br>
  </p>

  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body, id: :post_body%><br>
  </p>

  <p><%= form.submit %></p>
<% end %>

<%= link_to 'Back', blog_author_posts_path %>
